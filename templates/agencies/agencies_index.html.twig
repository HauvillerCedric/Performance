                                <li><span class="day">Jeudi :</span> {{ (pfastatt.thursdayOpening is null and pfastatt.thursdayClosing is null) ? 'Fermée' : (pfastatt.thursdayOpening|date('H:i') ~ '–' ~ pfastatt.thursdayClosing|date('H:i')) }}</li>
                                <li><span class="day">Vendredi :</span> {{ (pfastatt.fridayOpening is null and pfastatt.fridayClosing is null) ? 'Fermée' : (pfastatt.fridayOpening|date('H:i') ~ '–' ~ pfastatt.fridayClosing|date('H:i')) }}</li>
                                <li><span class="day">Samedi :</span> {{ (pfastatt.saturdayOpening is null and pfastatt.saturdayClosing is null) ? 'Fermée' : (pfastatt.saturdayOpening|date('H:i') ~ '–' ~ pfastatt.saturdayClosing|date('H:i')) }}</li>
                                <li><span class="day">Dimanche :</span> {{ (pfastatt.sundayOpening is null and pfastatt.sundayClosing is null) ? 'Fermée' : (pfastatt.sundayOpening|date('H:i') ~ '–' ~ pfastatt.sundayClosing|date('H:i')) }}</li>
                            </ul>
                            <p><i class="fa-solid fa-phone"></i> : {{ pfastatt.mobile }}</p>
                            <p><i class="fa-solid fa-at"></i> : {{ pfastatt.email }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
