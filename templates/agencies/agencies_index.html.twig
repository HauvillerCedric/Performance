                                <li><span class="day">Mardi :</span> {{ (pfastatt.tuesdayOpening is null and pfastatt.tuesdayClosing is null) ? 'Fermée' : (pfastatt.tuesdayOpening|date('H:i') ~ '–' ~ pfastatt.tuesdayClosing|date('H:i')) }}</li>
