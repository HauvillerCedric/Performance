{% extends '@EasyAdmin/page/login.html.twig' %}

{% block page_title %}Reset Password{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-control {
            margin-left: 10px;
        }
    </style>
{% endblock %}

{% block wrapper_wrapper %}
    {% set page_title = block('page_title') %}

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    {% include '@EasyAdmin/flash_messages.html.twig' %}

    <div class="login-wrapper">
        <header class="main-header">
            <div id="header-logo">
                {% block header_logo %}
                    <img class="pb-4" src="{{ asset('assets/images/logoPerformance.png') }}" alt="">
                {% endblock header_logo %}
            </div>
        </header>

        <section class="content">
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            {#
            <div>
                <small>
                    Enter your email address, and we will send you a
                    link to reset your password.
                </small>
            </div>
            #}
            <button class="btn btn-primary mt-2">Envoyer</button>
            {{ form_end(requestForm) }}
        </section>
    </div>
{% endblock %}