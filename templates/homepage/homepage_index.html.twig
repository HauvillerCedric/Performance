                    {% for actuality in threeActualities %}
                        <div class="col-12 col-xl mb-3 d-flex justify-content-center align-items-center ">
                            <div class="colorCard card" style="width: 18rem;">
                                <img src="{{ vich_uploader_asset(actuality) }}" class="card-img-top pt-2" style="height: 8rem;" alt="Photo of news">
                                <div class="bodyActuality card-body">
                                    <h5 class="titleCardActuality card-title" style="height: 5rem">{{ actuality.title }}</h5>
                                    <a href="{{ path('app_actualities_show', {'slug': actuality.slug}) }}" class="ActualityButton btn">Voir l'actualité</a>
